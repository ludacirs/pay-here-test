{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@recoil/*": ["./src/recoil/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@api": ["./src/api/index.ts"]
    },

    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
